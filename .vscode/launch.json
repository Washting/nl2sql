{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Backend (run.py)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/run.py",
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": true
        },
        {
            "name": "Python: Backend (uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/backend/.env",
            "justMyCode": true
        }
    ]
}
